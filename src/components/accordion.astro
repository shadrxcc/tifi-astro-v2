---
import close from "../assets/accordion-close.png";
import open from "../assets/accordion-open.png";

interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<details
  class="p-6 bg-[#F2F4F7] font-sans accordion gap-y-8 flex flex-col justify-between rounded-lg group"
>
  <summary class="flex items-center justify-between gap-8">
    <h3 class="text-[22px] font-sans font-bold" data-toggle="accordion">
      {question}
    </h3>

    <img
      src={open.src}
      id="open"
      data-toggle="accordion"
      class="w-[40px] group-open:hidden"
      alt=""
    />
    <img
      src={close.src}
      id="close"
      data-toggle="accordion"
      class="w-[40px] hidden group-open:block"
      alt=""
    />
  </summary>

  <div class="flex gap-y-4 flex-col">
    <p id="answer">
      {answer}
    </p>
  </div>
</details>

