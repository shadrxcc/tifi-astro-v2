---
import logo from "../assets/Tifi.png";
import menu from "../assets/menu.png";
import close from "../assets/close.svg";
---

<header
  class="bg-white font-sans flex py-6 px-[22px] lg:rounded-3xl lg:shadow-[0px_14px_16px_0px_rgba(29,41,57,0.05)] lg:my-8 lg:w-[85%] mx-auto items-center justify-between"
>
  <span>
    <a href="/"><img src={logo.src} alt="" /></a>
  </span>

  <div>
    <ul
      id="menu-mobile"
      class="hidden py-8 h-[60%] lg:py-0 lg:hidden noto flex-col top-20 left-0 lg:top-0 bg-white lg:bg-transparent right-0 absolute lg:relative lg:flex-row text-base text-[#1D2939] items-center gap-8"
    >
      <li class="lg:hover:text-primaryorange"><a href="/about">About Us</a></li>
      <li class="lg:hover:text-primaryorange">
        <a href="/portfolio">Portfolio</a>
      </li>
      <li class="lg:hover:text-primaryorange">
        <a href="/individuals">Clients</a>
      </li>
      <li class="lg:hover:text-primaryorange">
        <a href="/resources">Resources</a>
      </li>
      <li class="lg:hidden">
        <button
          class="bg-[#FF601F] font-button lg:hover:scale-[1.1] text-base font-bold py-3 px-5 text-white rounded-lg"
        >
          <a href="/contact">LET'S TALK</a>
        </button>
      </li>
    </ul>

    <ul
      id="menu"
      class="hidden py-8 justify-center lg:py-0 lg:flex noto flex-col bg-white lg:bg-transparent lg:flex-row text-base text-[#1D2939] items-center gap-8"
    >
      <li class="lg:hover:text-primaryorange"><a href="/about">About Us</a></li>
      <li class="lg:hover:text-primaryorange">
        <a href="/portfolio">Portfolio</a>
      </li>
      <li class="lg:hover:text-primaryorange">
        <a href="/individuals">Clients</a>
      </li>
      <li class="lg:hover:text-primaryorange">
        <a href="/resources">Resources</a>
      </li>
    </ul>
  </div>

  <button
    class="bg-[#FF601F] font-button hidden lg:block text-base font-bold py-3 px-5 text-white rounded-lg"
  >
    <a href="/contact">LET'S TALK</a>
  </button>
  <div class="lg:hidden">
    <div id="menu-open" class="lg:hidden">
      <img src={menu.src} class="w-2/3" alt="" />
    </div>

    <div id="menu-close" class="hidden lg:hidden">
      <img src={close.src} class="w-2/3" alt="" />
    </div>
  </div>
</header>

<script>
  const hamburger = document.getElementById("menu-open");
  const menu = document.getElementById("menu-mobile");
  const close = document.getElementById("menu-close");

  hamburger.addEventListener("click", () => {
    menu.style.display = "flex";
    hamburger.style.display = "none";
    close.style.display = "block";
  });

  close.addEventListener("click", () => {
    menu.style.display = "none";
    hamburger.style.display = "block";
    close.style.display = "none";
  });
</script>
