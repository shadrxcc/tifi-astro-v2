---
import { faqdata } from "../../faqdata.astro";
import Accordion from "../accordion.astro";

---

<section class="px-4 sm:px-8 lg:px-20 flex flex-col py-20 items-center gap-y-12">
    <h1 class="text-[32px] sm:text-[48px] lg:text-[64px]">FAQ</h1>

    <div class="grid gap-x-6 gap-y-4 sm:grid-cols-2">
        {faqdata.map((faq) => (
            <Accordion question={faq.question} answer={faq.answer}/>
        ))}
    </div>

</section>