---
import arrow from "../../assets/white-arrow.png";
---

<section id="mobile" class="text-white flex px-4 gap-y-20">
    <div class="flex flex-col items-center">
      <h1 class="sm:text-[72px]">The Tech Guy</h1>
      <p class="text-xl text-center">A Day in the life of a Software Developer</p>
    </div>
  
    <button
      class="flex items-center justify-center rounded-lg border w-fit font-extrabold text-base border-[#98A2B3] gap-x-3 px-5 py-4"
      >View Projects <img src={arrow.src} alt="arrow-icon" /></button
    >
</section>

<style>
  section {
    background-image: url(../../assets/projectsmobile.png);
    width: 100%;
    height: 600px;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  h1 {
    text-align: center;
    text-shadow: 0px 14px 16px rgba(29, 41, 57, 0.05);
    font-size: 48px;
    font-weight: 800;
    line-height: 160%;
  }

  button {
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.17);
    box-shadow: 0px 14px 16px 0px rgba(29, 41, 57, 0.05);
    backdrop-filter: blur(7.5px);
  }
</style>
