---
import day from "../../assets/Image.png";
import down from "../../assets/chevron-down.png";
import arrow from "../../assets/black-arrow.png";
---

<section
  class="px-4 bg-[#F2F4F7] sm:px-8 flex flex-col mt-16 py-16 gap-y-14 lg:px-20"
>
  <div class="flex flex-col gap-y-12">
    <div class="flex flex-col gap-y-4 lg:flex-row justify-between items-center">
      <div class="flex overflow text-base justify-center gap-x-10">
        <p
          class="text-base text-primaryorange border-b-2 border-primaryorange pb-1 tab-trigger"
          data-form="business"
        >
          Video Editing Tips
        </p>
        <p class="">Creative Storytelling</p>
        <p class="">Industry Insights</p>
        <p class="">Video Marketing</p>
      </div>

      <div class="flex space">
        <div class="flex items-center dropdown">
          <p class="">Newest first</p>
          <img src={down.src} alt="" />
        </div>

        <div class="flex items-center dropdown">
          <p class="">Videos</p>
          <img src={down.src} alt="" />
        </div>
      </div>
    </div>

    <h1 class="text-[32px] font-bold">Featured</h1>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 justify-center gap-6">
      <div class="flex flex-col gap-y-8">
        <img src={day.src} alt="" />

        <div class="flex flex-col gap-y-3">
          <p class="edit">Video Editing</p>
          <span class="flex items-center justify-between">
            <p class="title">Time lapse and Mapping</p>
            <img src={arrow.src} alt="" />
          </span>

